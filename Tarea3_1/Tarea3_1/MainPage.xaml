<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea3_1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#73C6B6" Padding="7" CornerRadius="15" BorderColor="#117A65">
            <Label Text="Registro de Empleado" TextColor="Black" HorizontalTextAlignment="Center"  FontSize="30"/>
        </Frame>
        <Image Source="registro"  Aspect="Fill" WidthRequest="100" HeightRequest="400" Margin="0,30,0,0"></Image>
        <Button x:Name="agg" CornerRadius="40" BackgroundColor="#73C6B6" VerticalOptions="EndAndExpand" BorderColor="#117A65" BorderWidth="2" FontSize="20" 
                Text="Agregar Nuevo Empleado" TextColor="Black" Clicked="agg_Clicked" Margin="30" Image="agregar" ></Button>
    </StackLayout>

</ContentPage>
